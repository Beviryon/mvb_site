{
  "kind": "singleType",
  "collectionName": "abouts",
  "info": {
    "singularName": "about",
    "pluralName": "abouts",
    "displayName": "About",
    "description": "Manage the about page content"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "team": {
      "type": "component",
      "repeatable": true,
      "component": "about.team-member"
    },
    "mission": {
      "type": "richtext"
    },
    "vision": {
      "type": "richtext"
    }
  }
} 